include includes/headers.pug 

<div class="container">
    <div class="row mb-4">
    </div>
        <div class="row">
            <div class="col-md-4 text-start">
            if userType == 1 
                <a href="/pages/logout"> Cerrar Sesión</a>
            else if userType == 2
                <a href="/pages/logout"> Cerrar Sesión</a>
            </div>
            <div class="col-4">
                <h5 style="color:green">#{remove}</h5>
            </div>
            <div class="col-4">
            </div>
        </div>
        if userType == 1
            <div class="row vh-100 justify-content-around align-items-center">
                <div class="text-center bg-info">
                    <p>#{nombre}</p>
                </div>
            </div>
        else if userType == 2
            <ul>
                each user, index in list
                    <li style="list-style: none">
                        form(action=`/pages/remove/${user._id}`, method="post") 
                                <div class="row my-4 bg-info card">
                                    <div class="col">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="card-title text-center mt-2">#{user.username}</h5>
                                            </div>    
                                        </div>  
                                    </div>
                                    <div class="col-3">
                                        <div class="row">
                                            <div class="col">
                                                <button type="submit" class="btn btn-danger mb-2">X</button>
                                                //- onclick='delete(" + JSON.stringify(user) +")'
                                            </div>    
                                        </div> 
                                    </div>
                                </div>
                    </li>
            </ul>
            
</div>